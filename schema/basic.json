{
    "id": "http://vamp-plugins.org/json/schema/basic#",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema for the basic part of various Vamp descriptors",
    "type": "object",
    "properties": {
	"identifier": {
	    "type": "string",
	    "pattern": "^[a-zA-Z0-9_-]+$"
	},
	"name": {
	    "type": "string"
	},
	"description": {
	    "type": "string"
	}
    },
    "required": [ "identifier" ],
    "additionalProperties": false
}
